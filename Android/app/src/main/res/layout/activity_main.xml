<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D4F6FA"
    tools:context=".MainActivity">



    <Button
        android:id="@+id/frioButton"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="210dp"
        android:background="#65B6F7"
        android:text="Frio"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/calorButton"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="280dp"
        android:background="#BD180D"
        android:text="Calor"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/ventilacionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:background="#9E4FD1"
        android:text="Ventilación"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/automaticoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:background="#FAB755"
        android:text="Automático"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/frontback" />

    <ImageView
        android:id="@+id/smartIcon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/smartairicon"
        android:layout_marginTop="110dp"
        android:layout_marginStart="265dp"/>

    <TextView
        android:id="@+id/smartAirShadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="110dp"
        android:lineSpacingExtra="8sp"
        android:text="SmartAir"
        android:textColor="#61676B"
        android:textSize="55sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/smartAir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="105dp"
        android:lineSpacingExtra="8sp"
        android:text="SmartAir"
        android:textColor="#FFFEFE"
        android:textSize="55sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/apagarButtonMain"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="305dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/botonapagarfrio" />


</RelativeLayout>